{
  "name": "lox",
  "displayName": "Lox",
  "version": "0.1.0",
  "description": "Rich Lox language support for Visual Studio Code",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marcuscaisey/lox",
    "directory": "vscode-lox"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc --watch"
  },
  "contributes": {
    "configuration": {
      "title": "Lox",
      "properties": {
        "lox.useLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Use the Lox language server \"loxls\" for powering language features like code navigation, completion, refactoring, formatting, and diagnostics."
        },
        "lox.loxlsPath": {
          "type": "string",
          "default": "loxls",
          "description": "Alternate path for the Lox language server \"loxls\". Provide either an absolute path or the name of the binary in PATH."
        }
      }
    },
    "configurationDefaults": {
      "[lox]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
      }
    },
    "grammars": [
      {
        "language": "lox",
        "scopeName": "source.lox",
        "path": "./syntaxes/lox.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "lox",
        "aliases": [
          "Lox",
          "lox"
        ],
        "extensions": [
          ".lox"
        ],
        "configuration": "./languages/lox.language-configuration.json",
        "icon": {
          "light": "./icons/crafting-interpreters-favicon.png",
          "dark": "./icons/crafting-interpreters-favicon.png"
        }
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "22.17.0",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "vscode": "^1.103.0"
  }
}
